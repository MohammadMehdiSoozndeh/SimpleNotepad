<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".EditNoteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="8"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/title_edit_text_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/note_title_str"
            android:layout_weight="6"
            android:maxLines="1"
            android:singleLine="true"
            />


        <EditText
            android:id="@+id/text_edit_text_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/text_of_note_hint_str"
            android:scrollbars="vertical"
            android:gravity="top"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/save_note_btn_id"
            android:text="@string/save_note_str"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/del_note_btn_id"
            android:text="@string/delete_note_str"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>




</LinearLayout>